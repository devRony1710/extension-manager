{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "vite", "vitest"],
    "moduleResolution": "bundler",
    "target": "es2024",
    "module": "ESNext",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
